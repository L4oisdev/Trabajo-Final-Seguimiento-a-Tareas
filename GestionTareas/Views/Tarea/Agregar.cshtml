@model GestionTareas.Models.Tarea

@{
    ViewData["Title"] = "Agregar Tarea";
}

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nueva Tarea</h2>

        <form asp-controller="Tarea" asp-action="Agregar" method="post">
            <div class="mb-3">
                <label>Proyecto</label>
                <select class="form-control" asp-for="ProyectoId" asp-items="ViewBag.Proyectos"></select>
            </div>

            <div class="mb-3">
                <label>Titulo</label>
                <input class="form-control" type="text" asp-for="Titulo" />
            </div>

            <div class="mb-3">
                <label>Descripción</label>
                <textarea class="form-control" asp-for="Descripcion"></textarea>
            </div>

            <div class="mb-3">
                <label>Responsable</label>
                <select class="form-control" asp-for="ResponsableId" asp-items="ViewBag.Responsables"></select>
            </div>

            <div class="mb-3">
                <label>Fecha de Inicio</label>
                <input class="form-control" type="date" asp-for="FechaInicio" />
            </div>

            <div class="mb-3">
                <label>Fecha de Fin</label>
                <input class="form-control" type="date" asp-for="FechaFin" />
            </div>

            <div class="mb-3">
                <label>Estado</label>
                <select class="form-control" asp-for="Status" asp-items="ViewBag.Estados"></select>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a class="btn btn-warning" asp-controller="Tarea" asp-action="Lista">Volver</a>
            </div>
        </form>
    </div>
</div>
