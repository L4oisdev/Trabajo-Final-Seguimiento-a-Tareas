@model GestionTareas.Models.Proyecto

@{
    ViewData["Title"] = "Agregar Proyecto";
}

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo Proyecto</h2>

        <form asp-controller="Proyecto" asp-action="Agregar" method="post">
            <div class="mb-3">
                <label>Código de Proyecto</label>
                <input class="form-control" type="text" asp-for="CodigoProyecto">
            </div>

            <div class="mb-3">
                <label>Titulo</label>
                <input class="form-control" type="text" asp-for="Titulo" />
            </div>

            <div class="mb-3">
                <label>Descripción</label>
                <textarea class="form-control" asp-for="Descripcion"></textarea>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a class="btn btn-warning" asp-controller="Proyecto" asp-action="Lista">Volver</a>
            </div>
        </form>
    </div>
</div>
